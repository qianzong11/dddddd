<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.kgc.dao.DepartmentDao">

    <resultMap id="BaseResultMap" type="cn.kgc.entity.Department">
        <!--@Table department-->
        <result property="depid" column="depId" jdbcType="INTEGER"/>
        <result property="depname" column="depName" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          depId, depName
        from employeesys.department
        where depId = #{depid}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          depId, depName
        from employeesys.department
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          depId, depName
        from employeesys.department
        <where>
            <if test="depid != null">
                and depId = #{depid}
            </if>
            <if test="depname != null and depname != ''">
                and depName = #{depname}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="depid" useGeneratedKeys="true">
        insert into employeesys.department(depName)
        values (#{depname})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update employeesys.department
        <set>
            <if test="depname != null and depname != ''">
                depName = #{depname},
            </if>
        </set>
        where depId = #{depid}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from employeesys.department where depId = #{depid}
    </delete>

</mapper>